        "tab.activeBackground": "#F5F6F7",
        "tab.inactiveBackground": "#E4E7EB",
        "tab.activeForeground": "#234361",
        "tab.inactiveForeground": "#7B8B9A",
        "tab.border": "#7B8B9A"
