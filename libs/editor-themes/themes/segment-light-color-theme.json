{
    "name": "Segment Light",
    "type": "light",
    "include": "./light_plus.json",
    "colors": {
        // Activity Bar
        "activityBar.background": "#425A70",
        "activityBar.foreground": "#F9F9FB",
        "activityBar.inactiveForeground": "#C7CED4",
        "activityBar.border": "#425A70",
        "activityBar.dropBackground": "#f9f9fb3a",
        "activityBarBadge.background": "#47B881",
        "activityBarBadge.foreground": "#F9F9FB",
        //  Badge
        "badge.background": "#66788A",
        "badge.foreground": "#F9F9FB",
        // Breadcrumb
        "breadcrumb.activeSelectionForeground": "#425A70",
        "breadcrumb.background": "#F5F6F7",
        "breadcrumb.focusForeground": "#234361",
        "breadcrumb.foreground": "#7B8B9A",
        "breadcrumbPicker.background": "#F5F6F7",
        // Button
        "button.background": "#66788A",
        "button.foreground": "#F5F6F7",
        "button.hoverBackground": "#7B8B9A",
